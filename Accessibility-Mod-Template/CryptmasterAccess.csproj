  <!-- Game Assembly -->
  <ItemGroup>
    <Reference Include="Assembly-CSharp">
      <HintPath>C:\Program Files (x86)\Steam\steamapps\common\Cryptmaster\CryptMaster_Data\Managed\Assembly-CSharp.dll</HintPath>
